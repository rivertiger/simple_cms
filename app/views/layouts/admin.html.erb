<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN"
   "http://www.w3.org/TR/html4/strict.dtd">

<html lang="en">
<head>
	<title>Simple CMS | <%= @page_title || 'Admin Area' %></title>
</head>
<body>
	<div id="header">
		<h1>Simple CMS Admin</h1>
		<%= stylesheet_link_tag('public', 'blueprint/screen', :media => 'all') %>
	</div>
	
	
	<% if !flash[:notice].blank? %>
	<div class="notice">
		<%= flash[:notice] %>
	</div>
	<% end %>
	
	
	<div id="main">	
		<div id="content">
			<%= yield %>
		</div>
	</div>
	<div id="footer">
		<p id="copyright">&copy; lynda.com / Kevin Skoglund</p>	
	</div>
</body>
</html>
